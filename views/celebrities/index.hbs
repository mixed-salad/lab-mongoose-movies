<h2>Celebrities Index</h2>

{{#each celebrities }}
<a href="/celebrities/{{_id}}">{{ name }}</a>
<p>{{ occupation }}</p>
<p>{{ catchPhrase }}</p>
<form action="celebrities/{{_id}}/delete" method="POST">
<button>Delete</button>
</form>
{{/each}}

<a href="/celebrities/create">Create a new celebrity</a>
